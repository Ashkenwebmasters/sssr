.sssr
{
    background-color: black;

    .spin
    {
        margin-left: 1em;
        vertical-align: middle;
    }

    .content
    {
        transition: opacity .20s linear;
    }

    &_loading .content
    {
        opacity: 0.5;
    }

    &_autoscroll
    {
        overflow: hidden;
    }
}

